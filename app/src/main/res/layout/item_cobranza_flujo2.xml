<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_title_grid"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/fl_item1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="FLUJO"
            android:gravity="center"
            android:textSize="@dimen/txt_5sp"
            />

        <TextView
            android:id="@+id/fl_item2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="FECHA ENVIO"
            android:gravity="center"
            android:textSize="@dimen/txt_5sp"
            />

        <TextView
            android:id="@+id/fl_item3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="FECHA ACEPTADO"
            android:gravity="center"
            android:textSize="@dimen/txt_5sp"
            />

        <TextView
            android:id="@+id/fl_item4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="ENVIADO A"
            android:gravity="center"
            android:textSize="@dimen/txt_5sp"
            />

        <TextView
            android:id="@+id/fl_item5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="ESTADO"
            android:gravity="center"
            android:textSize="@dimen/txt_5sp"
            />

    </LinearLayout>

</LinearLayout>