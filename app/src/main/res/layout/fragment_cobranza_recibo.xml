<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/rc_lblcliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLIENTE"
            android:gravity="center"
            android:textSize="@dimen/txt_7sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rc_lblfechaplanilla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="Fecha.Planilla"
                android:textColor="#424242"
                android:textSize="@dimen/txt_7sp"
               />

            <TextView
                android:id="@+id/rc_txtfechaplanilla"
                style="@style/SkyTextViewStyleSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:textSize="@dimen/txt_7sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rc_lblformapago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="Forma de Pago"
                android:textColor="#424242"
                android:textSize="@dimen/txt_7sp"
                />

            <TextView
                android:id="@+id/rc_txtformapago"
                style="@style/SkyTextViewStyleSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:textSize="@dimen/txt_7sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rc_lblcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="CC"
                android:textColor="#424242"
                android:textSize="@dimen/txt_7sp"
                />

            <TextView
                android:id="@+id/rc_txtcc"
                style="@style/SkyTextViewStyleSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:textSize="@dimen/txt_7sp" />
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/rc_lblrecibo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="Recibo"
                android:textColor="#424242"
                android:textSize="@dimen/txt_7sp"
                />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
              <EditText
                  android:id="@+id/rc_txtserie"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="1dp"
                  android:text=""
                  android:textColor="#424242"
                  android:textSize="@dimen/txt_7sp"
                  android:layout_weight="0.5"
                  style="@style/SkyTextViewStyle"
                  />

              <EditText
                  android:id="@+id/rc_txtrecibo"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="1dp"
                  android:layout_weight="1"
                  android:text=""
                  android:textColor="#424242"
                  android:textSize="@dimen/txt_7sp"
                  style="@style/SkyTextViewStyle"
                  />
          </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/rc_lblsoles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="Soles"
                    android:textColor="#424242"
                    android:textSize="@dimen/txt_7sp"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/rc_txtsoles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/txt_7sp"
                    android:layout_weight="1"
                    style="@style/SkyTextViewStyle"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/rc_lbldolares"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="Dolares"
                    android:textColor="#424242"
                    android:textSize="@dimen/txt_7sp"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/rc_txtdolares"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:textSize="@dimen/txt_7sp"
                    android:layout_weight="1"
                    style="@style/SkyTextViewStyle"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/re_lnopciones"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/rc_btncancelar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="CANCELAR"
            android:background="@color/ubell_color2"
            android:gravity="center"
            android:textSize="@dimen/txt_7sp"
            android:textColor="@color/background"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/rc_btnguardar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="GUARDAR"
            android:gravity="center"
            android:textSize="@dimen/txt_7sp"
            android:background="@color/ubell_color1"
            android:textColor="@color/background"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
