<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="false"
        android:background="@drawable/borderradius_menu_unibell"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Documento"
                android:textSize="12sp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="@color/Button_login_unibell"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Importe"
                android:textSize="12sp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="@color/Button_login_unibell"
                android:layout_weight="1"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/cp_item2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fact F001-1245871"
                android:textColor="@color/label_color_menu"
                android:textSize="12sp"
                android:fontFamily="@font/sf_pro_display_light"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/cp_item3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="S/ 100.00"
                android:textSize="12sp"
                android:fontFamily="@font/sf_pro_display_light"
                android:textColor="@color/label_color_menu"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Saldo"
                android:textSize="12sp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="@color/Button_login_unibell"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="F.Doc / F.Vcto"
                android:textSize="12sp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="@color/Button_login_unibell"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/cp_item4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="S/ 200.00"
                android:textColor="@color/label_color_menu"
                android:textSize="12sp"
                android:fontFamily="@font/sf_pro_display_light"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/cp_item6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="12/09/2019  -  11/10/2019"
                android:textSize="12sp"
                android:fontFamily="@font/sf_pro_display_light"
                android:textColor="@color/label_color_menu"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                />
        </LinearLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/lblCobranza"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Cobranza"
                android:textSize="12sp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="@color/Button_login_unibell"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/txtCobranza"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="S/ 0.00"
                android:textSize="12sp"
                android:fontFamily="@font/sf_pro_display_light"
                android:textColor="@color/label_color_menu"
                android:layout_below="@id/lblCobranza"
                />


            <Button
                android:id="@+id/cl_btn1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/lblCobranza"
                android:background="@drawable/borderradiusbutton"
                android:focusable="false"
                android:text="Pagar"
                android:textAllCaps="false"
                android:textColor="@color/label_blanco_login_unibell"
                android:textSize="16sp" />


            <Button
                android:id="@+id/cl_btnanular"
                android:background="@drawable/borderradiusbutton_inac"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/lblCobranza"
                android:focusable="false"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:textColor="@color/label_blanco_login_unibell"
                android:textSize="16sp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amortizando"
                android:textSize="16dp"
                android:fontFamily="@font/sf_pro_display_light"
                android:textColor="@color/Button_login_unibell"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            >
            <EditText
                android:id="@+id/cp_txt1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_5sp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:visibility="gone"
                />




        </LinearLayout>

    </LinearLayout>
</LinearLayout>
