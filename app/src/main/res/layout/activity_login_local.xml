<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_login_unibell"
    android:orientation="vertical"
    >
    <!--android:layout_height="240dp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/top_login_unibell"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblTituloLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:text="@string/info_empresa_unibell"
            android:textColor="@color/label_login_titulo_unibell"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textSize="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        >
        <TextView
            android:id="@+id/lblSubtituloLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:text="@string/info_text_local_unibell"
            android:textColor="@color/Button_login_unibell"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/lblEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Empresa"
            android:layout_marginTop="@dimen/pad_20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:textSize="16dp"
            android:textColor="@color/label_login_unibell"
            />

        <TextView
            android:id="@+id/txtempresa"
            style="@style/SkyTextViewStyleSpinnerUnibell"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:minWidth="120dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textSize="@dimen/pad_16dp"
            android:textColor="@color/label_color_menu"
            android:tag="0"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Local"
            android:layout_marginTop="@dimen/pad_20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:textSize="16dp"
            android:textColor="@color/label_login_unibell"

            />

        <TextView
            android:id="@+id/txtlocal"
            style="@style/SkyTextViewStyleSpinnerUnibell"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:minWidth="120dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textSize="@dimen/pad_16dp"
            android:textColor="@color/label_color_menu"
            android:tag="0"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/btLoginLocal"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:drawableLeft="@drawable/arrow_right_thick"
                android:gravity="center_horizontal"
                android:background="@drawable/boton_redondo"
                android:layout_marginTop="@dimen/pad_20dp"
                android:paddingLeft="7dp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>