<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/borderradius_sin_borde"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Razón Social"
            android:textSize="16dp"
            android:textColor="@color/Button_login_unibell"
            android:fontFamily="@font/sf_pro_display_medium"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:id="@+id/cr_lblrazonsocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rosario Gutierrez B. Expertos en Belleza E.I.R.L"
            android:textSize="16dp"
            android:focusable="false"
            android:textColor="@color/label_color_menu"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Código"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/Button_login_unibell"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Monto"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/Button_login_unibell"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/cr_lblcodigo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="47519349"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:textColor="@color/label_color_menu"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/cr_lblmonto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="S/ 293.64"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:textColor="@color/label_color_menu"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fecha Cobranza"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/Button_login_unibell"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Moneda"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/Button_login_unibell"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/cr_lblfechacobranza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="15 Ago 2019"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:textColor="@color/label_color_menu"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/cr_lblmoneda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Soles"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:textColor="@color/label_color_menu"
            android:layout_weight="1"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recibo"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/Button_login_unibell"
            android:layout_marginBottom="2dp"
            android:drawableRight="@drawable/file_download_outline"
            />

        <TextView
            android:id="@+id/cr_lblrecibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01-824618"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:textColor="@color/label_color_menu"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Planilla"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/Button_login_unibell"
            android:layout_marginBottom="2dp"
            android:drawableRight="@drawable/file_download_outline"
            />

        <TextView
            android:id="@+id/cr_lblplanilla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="99-0022509"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:textColor="@color/label_color_menu"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/cr_btnverdetalle"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/borderradiusbutton"
            android:text="Ver Detalle"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>


</LinearLayout>
