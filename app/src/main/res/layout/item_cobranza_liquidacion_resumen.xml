<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyItemLiquidacion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/borderradius_sin_borde"
    android:paddingLeft="@dimen/pad_10dp"
    android:paddingRight="@dimen/pad_10dp"
    >
    <CheckBox
        android:id="@+id/cl_itemchk"
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:focusable="false"
        android:visibility="gone"
        />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <TextView
            android:id="@+id/cl_col2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cl_itemCliente"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="Doc"
            android:textColor="@color/Button_login_unibell"
      android:visibility="gone"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/cl_col3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:fontFamily="@font/sf_pro_display_medium"
            android:text="F.Pago"
            android:textColor="@color/Button_login_unibell"
            android:textSize="10dp"
            android:layout_below="@id/cl_itemCliente"

            />

        <TextView
            android:id="@+id/lblFechaLiquidacion"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cl_col3"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="Fecha"
            android:textColor="@color/Button_login_unibell"
            android:textSize="10dp"
            android:layout_below="@id/cl_itemCliente"


            />

        <TextView
            android:id="@+id/cl_col9"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lblFechaLiquidacion"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="Monto"
            android:textColor="@color/Button_login_unibell"
            android:textSize="10dp"
            android:layout_below="@id/cl_itemCliente"
            android:paddingLeft="@dimen/pad_5dp"
            />





        <TextView
            android:id="@+id/cl_lblRecibo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="Recibo"
            android:textColor="@color/Button_login_unibell"
            android:textSize="10dp"
            android:layout_below="@id/cl_itemFormaPago"
            android:paddingBottom="@dimen/pad_5dp"

            />

        <TextView
            android:id="@+id/cl_lblPlanilla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Planilla"
            android:textSize="10dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/Button_login_unibell"
            android:drawableRight="@drawable/eye_active"
            android:paddingRight="@dimen/pad_10dp"
            android:layout_below="@id/cl_itemFormaPago"
            android:layout_toRightOf="@id/cl_lblRecibo"
            />


        <TextView
            android:id="@+id/cl_itemCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Olviglobal Company SAC"
            android:textSize="10dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:textColor="@color/label_color_menu"
            />


        <TextView
            android:id="@+id/cl_itemPlanilla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="99-122465"
            android:textSize="10dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:paddingRight="@dimen/pad_10dp"
            android:drawableRight="@drawable/file_download_outline"
            android:textColor="@color/label_color_menu"
            android:layout_toRightOf="@id/cl_itemRecibo"
            android:layout_below="@id/cl_lblRecibo"

            />

        <TextView
            android:id="@+id/cl_itemDocumentos"
            android:text="Fact F001-25"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:layout_below="@id/cl_col2"
            android:textColor="@color/label_color_menu"
android:visibility="gone"
            />

        <TextView
            android:id="@+id/cl_itemFormaPago"
            android:text="Efectivo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:layout_below="@id/cl_col3"
            android:textColor="@color/label_color_menu"



            />

        <TextView
            android:id="@+id/txtFechaLiquidacion"
            android:text="15/11/2019"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:layout_below="@id/lblFechaLiquidacion"
            android:textColor="@color/label_color_menu"
            android:layout_toRightOf="@id/cl_itemFormaPago"
            />

        <TextView
            android:id="@+id/cl_itemMonto"
            android:text="S/100.53"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:layout_below="@id/cl_col9"
            android:textColor="@color/label_color_menu"
            android:paddingLeft="@dimen/pad_5dp"
            android:layout_toRightOf="@id/txtFechaLiquidacion"
            />



        <Button
            android:id="@+id/cl_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="EDITAR"
            android:textSize="@dimen/txt_7sp"
            android:background="@drawable/borderradiusbutton"
            android:textColor="@color/background"
            android:layout_below="@id/txtFechaLiquidacion"
            android:layout_toRightOf="@id/cl_itemFormaPago"
            />


        <TextView
            android:id="@+id/cl_itemRecibo"
            android:text="001-124556"
            android:paddingRight="15dp"
            android:drawableRight="@drawable/file_download_outline"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:layout_below="@id/cl_lblRecibo"
            android:textColor="@color/label_color_menu"

            />

        <ImageView
            android:id="@+id/ivMarkerConciliado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/marker_conciliacion"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />
    </RelativeLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblcPacking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Planilla despacho"
                android:textSize="10dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="@color/Button_login_unibell"
                />

            <TextView
                android:id="@+id/txtcPacking"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="44196"
                android:textSize="10dp"
                android:fontFamily="@font/sf_pro_display_light"
                android:layout_below="@id/lblcPacking"
                android:textColor="@color/label_color_menu"
                />

        </LinearLayout>

    </LinearLayout>





    <LinearLayout
        android:id="@+id/lyFondoBtnEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_login_unibell"
        >




    </LinearLayout>

</LinearLayout>



