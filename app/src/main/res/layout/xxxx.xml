<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:focusable="false"
        >
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            style="@style/SkyTextViewStyle"
            >
            <TextView
                android:id="@+id/cp_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="T.Doc"
                android:gravity="center"
                android:textColor="@color/ubell_rojo"
                android:textSize="@dimen/txt_5sp"
                android:layout_marginRight="0dp"
                />

            <TextView
                android:id="@+id/cp_item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_5sp"
                android:layout_marginRight="0dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            style="@style/SkyTextViewStyle"
            >
            <TextView
                android:id="@+id/cp_item5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Importe"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_5sp"
                android:layout_marginRight="0dp"
                />

            <TextView
                android:id="@+id/cp_item6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Cobranza"
                android:gravity="center"
                android:textColor="@color/ubell_color1"
                android:textSize="@dimen/txt_5sp"
                android:layout_marginRight="0dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/cp_item7"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Saldo"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginRight="0dp"
            style="@style/SkyTextViewStyle"
            />

        <EditText
            android:id="@+id/cp_txt1"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:hint="0.00"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_5sp"
            android:layout_marginRight="0dp"
            style="@style/SkyTextViewStyle"
            android:background="@color/ubell_color11"
            android:inputType="numberDecimal"
            android:maxLength="10"
            />

        <Button
            android:id="@+id/cl_btn1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:focusable="false"
            android:text="P"
            android:background="@color/ubell_color1"
            android:textColor="@color/background"
            />

        <Button
            android:id="@+id/cl_btnanular"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:focusable="false"
            android:text="X"
            android:background="@color/ubell_rojo"
            android:textColor="@color/background"
            />
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            style="@style/SkyTextViewStyle"
            >
            <TextView
                android:id="@+id/cp_item3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="F.Doc"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_5sp"
                android:layout_marginRight="0dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/cp_item4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="F.Doc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_5sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/cp_item8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(10)"
                    android:textColor="@color/ubell_rojo"
                    android:textSize="@dimen/txt_5sp"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>









</LinearLayout>
