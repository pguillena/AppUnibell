<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RECIBO"
                android:textColor="@color/ubell_rojo"
                android:textSize="@dimen/txt_7sp"
                android:gravity="center|left"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/rc_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SERIE-NUMERO"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_7sp"
                android:focusable="false"
                android:layout_marginLeft="15dp"
                android:drawableRight="@drawable/file_download_outline"
                android:fontFamily="@font/sf_pro_display_bold"
                android:paddingRight="200dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA"
                    android:textColor="@color/ubell_rojo"
                    android:textSize="@dimen/txt_7sp"
                    android:gravity="center|left"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="MONTO"
                    android:textColor="@color/ubell_rojo"
                    android:gravity="center|left"
                    android:textSize="@dimen/txt_7sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                >
                <TextView
                    android:id="@+id/rc_item2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="16 Agosto 2019"
                    android:gravity="center|left"
                    android:textSize="@dimen/txt_7sp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/rc_item4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="S/1234"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_7sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="FORMA PAGO"
                android:gravity="center|left"
                android:textColor="@color/ubell_rojo"
                android:textSize="@dimen/txt_7sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/rc_item3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="FORMA PAGO"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_7sp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ESTADO"
                android:gravity="center|left"
                android:textColor="@color/ubell_rojo"
                android:textSize="@dimen/txt_7sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/rc_item5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ESTADO"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_7sp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                >
                <Button
                    android:id="@+id/cl_btneditar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="EDITAR"
                    android:textSize="@dimen/txt_7sp"
                    android:background="@drawable/borderradiusbutton_recibo"
                    android:textColor="@color/label_blanco_login_unibell"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:focusable="false"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
