<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/co_lnmensaje"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/txt_7sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/co_lnmensaje"
        >

        <Button
            android:id="@+id/tvNo"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/gnr_lbl_cancelar"
            android:textSize="@dimen/txt_8sp"
            android:layout_weight="1"
            android:background="@color/ubell_color2"
            android:textColor="@color/background"
            android:layout_marginRight="1dp"
            />

        <Button
            android:id="@+id/tvYes"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/gnr_lbl_aceptar"
            android:textSize="@dimen/txt_7sp"
            android:layout_weight="1"
            android:background="@color/ubell_color1"
            android:textColor="@color/background"
            />

    </LinearLayout>

</RelativeLayout>
