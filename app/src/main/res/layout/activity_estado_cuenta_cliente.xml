<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_main_unibell"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/label_login_titulo_unibell"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/dw_top"
            android:paddingLeft="@dimen/pad_20dp"
            android:paddingBottom="@dimen/pad_10dp"
            >
            <TextView
                android:id="@+id/lblClienteEstadoCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliente"
                android:fontFamily="@font/sf_pro_display_light"
                android:textSize="14dp"
                android:textColor="@color/label_blanco_login_unibell"
                />

            <TextView
                android:id="@+id/ec_lblcliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elvis Galindo León"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textSize="18dp"
                android:textColor="@color/label_blanco_login_unibell"
                />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/pad_20dp"
        android:paddingRight="@dimen/pad_20dp"
        android:paddingBottom="@dimen/pad_20dp"
        android:background="@color/label_login_titulo_unibell"
        >


        <TextView
            android:id="@+id/lblSaldoDeudaVencida"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Deuda vencida"
            android:textSize="16dp"
            android:layout_marginTop="@dimen/pad_20dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/Button_login_unibell"
            />


        <TextView
            android:id="@+id/ec_txtsaldovencido"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:textColor="@color/label_color_menu"
            android:hint="S/ 0.00"
            android:layout_below="@id/lblSaldoDeudaVencida"
            />




        <TextView
            android:id="@+id/lblSaldoDeudaXVencer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deuda por vencer"
            android:textSize="16dp"
            android:layout_marginTop="@dimen/pad_20dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/Button_login_unibell"
            android:layout_toRightOf="@id/lblSaldoDeudaVencida"
            />

        <TextView
            android:id="@+id/ec_txtsaldoxvencer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:textColor="@color/label_color_menu"
            android:hint="S/ 0.00"
            android:layout_below="@id/lblSaldoDeudaXVencer"
            android:layout_toRightOf="@id/ec_txtsaldovencido"
            />



        <TextView
            android:id="@+id/lblBoletas"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Total boletas"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/Button_login_unibell"
            android:layout_marginTop="@dimen/pad_20dp"
            android:layout_below="@id/ec_txtsaldovencido"
            />
        <TextView
            android:id="@+id/lblFacturas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total facturas"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/Button_login_unibell"
            android:layout_toRightOf="@id/lblBoletas"
            android:layout_marginTop="@dimen/pad_20dp"
            android:layout_below="@id/ec_txtsaldoxvencer"
            />

        <TextView
            android:id="@+id/ec_txttboleta"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:textColor="@color/label_color_menu"
            android:layout_below="@id/lblBoletas"
            android:hint="S/ 0.00"
            />

        <TextView
            android:id="@+id/ec_txttfacturas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:textColor="@color/label_color_menu"
            android:hint="S/ 0.00"
            android:layout_below="@id/lblFacturas"
            android:layout_toRightOf="@id/ec_txttboleta"
            />

        <TextView
            android:id="@+id/lblNC"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Total nota de crédito"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/Button_login_unibell"
            android:layout_below="@id/ec_txttboleta"
            android:layout_marginTop="@dimen/pad_20dp"
            />


        <TextView
            android:id="@+id/ec_txttnotacredito"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:textColor="@color/label_color_menu"
            android:hint="S/ 0.00"
            android:layout_below="@id/lblNC"
            />



        <TextView
            android:id="@+id/lblND"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total nota de débito"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/Button_login_unibell"
            android:layout_below="@id/ec_txttfacturas"
            android:layout_toRightOf="@id/lblNC"
            android:layout_marginTop="@dimen/pad_20dp"
            />


        <TextView
            android:id="@+id/ec_txttnotadebito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/sf_pro_display_light"
            android:textColor="@color/label_color_menu"
            android:hint="S/ 0.00"
            android:layout_below="@id/lblNC"
            android:layout_toRightOf="@id/ec_txttnotacredito"
            />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pad_20dp"
        android:paddingRight="@dimen/pad_20dp"
        android:paddingTop="@dimen/pad_20dp"
        >

        <ListView
            android:id="@+id/ec_lsdet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="@dimen/pad_20dp"
            />
    </LinearLayout>


</LinearLayout>
