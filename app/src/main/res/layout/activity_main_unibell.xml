<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_unibell"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:id="@+id/llMenuUnibell"
        android:layout_width="@dimen/lvmenu_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/background"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RGALVEZ"
                android:textColor="@color/background"
                android:textStyle="bold"
                android:textSize="10dp"
                android:gravity="right"
                />
        </LinearLayout>

        <ListView
            android:id="@+id/mnu_lvmenu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:listSelector="@color/list_seleccion"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/dw_top"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:gravity="left"
                    android:text="Usuario"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="14dp"
                    android:textColor="@color/label_blanco_login_unibell"
                    />

                <TextView
                    android:id="@+id/lblNombreUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:gravity="left"
                    android:text="Percy Giancarlo Guillen Alcantara"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="@color/label_blanco_login_unibell"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Empresa"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:padding="@dimen/pad_5dp"
                    android:textSize="14dp"
                    android:textColor="@color/label_blanco_login_unibell"

                    />

                <TextView
                    android:id="@+id/lblLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Local"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:padding="@dimen/pad_5dp"
                    android:textSize="14dp"
                    android:textColor="@color/label_blanco_login_unibell"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lo_txtempresa"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/Spinner_main_unibell"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="EMPRESA"
                    android:textAllCaps="true"
                    android:textColor="@color/background_login_unibell"
                    android:textSize="@dimen/pad_16dp" />

                <TextView
                    android:id="@+id/lo_txtlocal"
                    android:layout_weight="1"
                    android:background="@color/Spinner_main_unibell"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:paddingTop="10dp"
                    android:textSize="@dimen/pad_16dp"
                    android:textColor="@color/background_login_unibell"
                    android:gravity="center"
                    android:text="LOCAL"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnsincronizar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Sincronizar registros"
                android:drawableLeft="@drawable/list_sincronizar"
                android:layout_weight="1"
                android:textSize="@dimen/pad_20dp"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                android:paddingTop= "28dp"
                android:paddingBottom="28dp"
                android:background="@drawable/borderradius_menu_unibell"
                android:textColor="@color/label_color_menu"
                android:layout_marginLeft="@dimen/pad_20dp"
                android:layout_marginRight="@dimen/pad_20dp"
                android:layout_marginTop="@dimen/pad_20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btncobranzas"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Cobranzas"
                android:drawableLeft="@drawable/list_cobranza"
                android:layout_weight="1"
                android:textSize="@dimen/pad_20dp"
                android:paddingLeft="@dimen/pad_20dp"
                android:paddingRight="30dp"
                android:background="@drawable/borderradius_menu_unibell"
                android:textColor="@color/label_color_menu"
                android:layout_marginLeft="@dimen/pad_20dp"
                android:layout_marginRight="@dimen/pad_20dp"
                android:layout_marginTop="@dimen/pad_20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnliquidacion"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Liquidación de cobranzas"
                android:drawableLeft="@drawable/list_liquidacion"
                android:layout_weight="1"
                android:textSize="@dimen/pad_20dp"
                android:paddingLeft="@dimen/pad_20dp"
                android:paddingRight="30dp"
                android:background="@drawable/borderradius_menu_unibell"
                android:textColor="@color/label_color_menu"
                android:layout_marginLeft="@dimen/pad_20dp"
                android:layout_marginRight="@dimen/pad_20dp"
                android:layout_marginTop="@dimen/pad_20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnaplanilla"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Aprobación de planillas"
                android:drawableLeft="@drawable/list_aprobacion"
                android:layout_weight="1"
                android:textSize="@dimen/pad_20dp"
                android:paddingLeft="@dimen/pad_20dp"
                android:paddingRight="30dp"
                android:background="@drawable/borderradius_menu_unibell"
                android:textColor="@color/label_color_menu"
                android:layout_marginLeft="@dimen/pad_20dp"
                android:layout_marginRight="@dimen/pad_20dp"
                android:layout_marginTop="@dimen/pad_20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnreportes"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Reportes"
                android:drawableLeft="@drawable/list_report"
                android:layout_weight="1"
                android:textSize="@dimen/pad_20dp"
                android:paddingLeft="@dimen/pad_20dp"
                android:paddingRight="30dp"
                android:background="@drawable/borderradius_menu_unibell"
                android:textColor="@color/label_color_menu"
                android:layout_marginLeft="@dimen/pad_20dp"
                android:layout_marginRight="@dimen/pad_20dp"
                android:layout_marginTop="@dimen/pad_20dp"
                />
        </LinearLayout>

    </LinearLayout>



</android.support.v4.widget.DrawerLayout>
