<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="2dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="@color/ubell_color1"
        >
        <TextView
            android:id="@+id/rc_item1"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="RECIBO"
            android:gravity="center"
            android:textColor="@color/background"
            android:textSize="@dimen/txt_5sp"
            android:layout_marginRight="0dp"
            style="@style/SkyTextViewStyle"
            />
        <TextView
            android:id="@+id/rc_item2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="FORMA PAGO"
            android:gravity="center"
            android:textColor="@color/background"
            android:textSize="@dimen/txt_5sp"
            android:layout_marginRight="0dp"
            style="@style/SkyTextViewStyle"
            />

        <TextView
            android:id="@+id/rc_item3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="MONTO"
            android:gravity="center"
            android:textColor="@color/background"
            android:textSize="@dimen/txt_5sp"
            android:layout_marginRight="0dp"
            style="@style/SkyTextViewStyle"
            />

        <TextView
            android:id="@+id/rc_item4"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="ESTADO"
            android:gravity="center"
            android:textColor="@color/background"
            android:textSize="@dimen/txt_5sp"
            android:layout_marginRight="0dp"
            style="@style/SkyTextViewStyle"
            />


        <TextView
            android:id="@+id/rc_item5"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="EVENTO"
            android:gravity="center"
            android:textColor="@color/background"
            android:textSize="@dimen/txt_5sp"
            android:layout_marginRight="0dp"
            style="@style/SkyTextViewStyle"
            />

    </LinearLayout>

</LinearLayout>
